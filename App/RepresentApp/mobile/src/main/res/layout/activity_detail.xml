<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.yhwinnie.representapp.DetailActivity"
    android:scrollIndicators="top"
    android:nestedScrollingEnabled="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/diannefeinstein"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="250dp"
                android:maxWidth="300dp"

                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Party"
                android:textSize="20sp"
                android:textColor="#333333"
                android:id="@+id/textView12"
                android:enabled="true"

                android:layout_below="@id/imageView2" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Date of Term:"
            android:id="@+id/textView9"
            android:textSize="12sp"
            android:textColor="#333333"
                android:layout_below="@id/textView12"
            android:autoText="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/textView14"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Committees:"
                android:id="@+id/textView10"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginStart="10dp"
                android:text="No Committee"
                android:textSize="12sp"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_toEndOf="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bills Sponsored:"
                android:textColor="#333333"
                android:id="@+id/textView13"
                android:textSize="12sp"
                android:autoText="true"
                android:textStyle="bold"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginStart="10dp"
                android:text="No Bills"
                android:id="@+id/textView15"
                android:textSize="12sp"
                android:layout_below="@+id/textView13"
                 />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
